        </div>
    </div>

    <!-- Register Modal -->
    <div id="registerModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('registerModal')">&times;</span>
            <h3 class="text-2xl font-archivo text-hot-pink mb-6 text-center">
                <i class="fas fa-user-plus mr-2"></i>CREAR CUENTA
            </h3>
            <form id="registerForm">
                <input type="text" id="registerName" placeholder="Nombre completo" class="form-input" required>
                <div id="registerNameError" class="error-message">El nombre es requerido</div>
                
                <input type="email" id="registerEmail" placeholder="Email" class="form-input" required>
                <div id="registerEmailError" class="error-message">Por favor ingresa un email válido</div>
                
                <input type="password" id="registerPassword" placeholder="Contraseña" class="form-input" required>
                <div id="registerPasswordError" class="error-message">La contraseña debe tener al menos 6 caracteres</div>
                
                <input type="password" id="registerConfirmPassword" placeholder="Confirmar contraseña" class="form-input" required>
                <div id="registerConfirmPasswordError" class="error-message">Las contraseñas no coinciden</div>
                
                <button type="submit" class="bg-hot-pink text-black px-8 py-3 rounded-full font-bold uppercase tracking-widest text-sm button-alt w-full">
                    <i class="fas fa-user-plus mr-2"></i>REGISTRARSE
                </button>
            </form>
            <div class="text-center mt-4">
                <p class="text-gray-400">
                    ¿Ya tienes cuenta? <a href="#" onclick="switchToLogin()" class="text-electric-blue hover:text-hot-pink">Inicia sesión</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Cart Modal -->
    <div id="cartModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('cartModal')">&times;</span>
            <h3 class="text-2xl font-archivo text-hot-pink mb-6 text-center">
                <i class="fas fa-shopping-cart mr-2"></i>TU CARRITO
            </h3>
            <div id="cartItems">
                <!-- Los productos del carrito se cargarán aquí -->
            </div>
            <div class="mt-6 border-t border-electric-blue pt-4">
                <div class="flex justify-between text-lg font-bold mb-4">
                    <span>Total:</span>
                    <span id="cartTotal">$0.00</span>
                </div>
                <button class="bg-hot-pink text-black px-8 py-3 rounded-full font-bold uppercase tracking-widest text-sm button-alt w-full" onclick="checkout()">
                    Finalizar Compra
                </button>
            </div>
        </div>
    </div>

    <!-- Search Modal -->
    <div id="searchModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('searchModal')">&times;</span>
            <h3 class="text-2xl font-archivo text-hot-pink mb-6 text-center">
                <i class="fas fa-search mr-2"></i>BUSCAR PRODUCTOS
            </h3>
            <input type="text" placeholder="¿Qué estás buscando?" class="form-input" id="searchInput">
            <button class="bg-hot-pink text-black px-8 py-3 rounded-full font-bold uppercase tracking-widest text-sm button-alt w-full mt-4" onclick="searchProducts()">
                Buscar
            </button>
            <div id="searchResults" class="mt-4 max-h-60 overflow-y-auto hidden">
                <!-- Resultados de búsqueda -->
            </div>
        </div>
    </div>

    <!-- Cart Notification -->
    <div id="cartNotification" class="cart-notification">
        <i class="fas fa-check-circle mr-2"></i>
        <span>Producto añadido al carrito!</span>
    </div>

    <script>
        // Datos de productos
        const products = [
            {
                id: 1,
