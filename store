                description: "Mochila resistente con múltiples compartimentos.",
                isNew: false,
                onSale: true
            },
            {
                id: 6,
                name: "Pants Baggy",
                price: 54.99,
                category: "clothing",
                image: "https://images.unsplash.com/photo-1591047139829-d91aecb6caea?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=736&q=80",
                description: "Pantalones holgados con corte urbano.",
                isNew: false,
                onSale: false
            }
        ];

        let cart = [];
        let currentFilter = 'all';
        let currentUser = null;

        // Inicializar la tienda
        function initShop() {
            loadUserData();
            loadCart();
            displayProducts(products);
            displayNewProducts();
            displaySaleProducts();
            updateCartCount();
            setupEventListeners();
            checkLoggedInUser();
        }

        // Cargar datos del usuario desde localStorage
        function loadUserData() {
            const userData = localStorage.getItem('drillts_user');
            if (userData) {
                currentUser = JSON.parse(userData);
                updateUserSection();
            }
        }

        // Cargar carrito desde localStorage
        function loadCart() {
            const savedCart = localStorage.getItem('drillts_cart');
            if (savedCart) {
                cart = JSON.parse(savedCart);
            }
        }

        // Guardar carrito en localStorage
        function saveCart() {
            localStorage.setItem('drillts_cart', JSON.stringify(cart));
        }

        // Configurar event listeners
        function setupEventListeners() {
            // Filtros de categoría
            document.querySelectorAll('.category-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    filterProducts(category);
                    
                    // Actualizar botones activos
                    document.querySelectorAll('.category-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });

            // Formularios
            document.getElementById('loginForm').addEventListener('submit', loginUser);
            document.getElementById('registerForm').addEventListener('submit', registerUser);
            document.getElementById('newsletterForm').addEventListener('submit', subscribeNewsletter);
            document.getElementById('contactForm').addEventListener('submit', submitContactForm);
        }

        // Mostrar productos en la sección principal
        function displayProducts(productsArray) {
            const productsGrid = document.getElementById('productsGrid');
            productsGrid.innerHTML = '';
            
            const filteredProducts = currentFilter === 'all' 
                ? productsArray 
                : productsArray.filter(product => product.category === currentFilter);
            
            if (filteredProducts.length === 0) {
                productsGrid.innerHTML = `
                    <div class="col-span-3 text-center section-alt p-8">
                        <i class="fas fa-box-open text-5xl text-electric-blue mb-4"></i>
                        <h4 class="text-xl font-bold text-hot-pink mb-2">NO HAY PRODUCTOS</h4>
                        <p class="text-gray-400">No encontramos productos en esta categoría.</p>
                    </div>
                `;
                return;
            }
            
            filteredProducts.forEach(product => {
                const productElement = createProductElement(product);
                productsGrid.appendChild(productElement);
            });
        }

        // Mostrar productos nuevos
        function displayNewProducts() {
            const newProductsGrid = document.getElementById('newProductsGrid');
            newProductsGrid.innerHTML = '';
            
            const newProducts = products.filter(product => product.isNew);
            
            if (newProducts.length === 0) {
                newProductsGrid.innerHTML = `
                    <div class="col-span-3 text-center section-alt p-8">
                        <i class="fas fa-box-open text-5xl text-hot-pink mb-4"></i>
                        <h4 class="text-xl font-bold text-electric-blue mb-2">PRÓXIMAMENTE</h4>
                        <p class="text-gray-400">Estamos trabajando en nuevos productos.</p>
                    </div>
                `;
                return;
            }
            
            newProducts.forEach(product => {
                const productElement = createProductElement(product);
                newProductsGrid.appendChild(productElement);
            });
        }

        // Mostrar productos en oferta
        function displaySaleProducts() {
            const saleProductsGrid = document.getElementById('saleProductsGrid');
            saleProductsGrid.innerHTML = '';
            
            const saleProducts = products.filter(product => product.onSale);
            
            if (saleProducts.length === 0) {
                saleProductsGrid.innerHTML = `
                    <div class="col-span-3 text-center section-alt p-8">
                        <i class="fas fa-box-open text-5xl text-electric-blue mb-4"></i>
                        <h4 class="text-xl font-bold text-hot-pink mb-2">SIN OFERTAS</h4>
                        <p class="text-gray-400">No hay productos en oferta en este momento.</p>
                    </div>
                `;
                return;
            }
            
            saleProducts.forEach(product => {
                const productElement = createProductElement(product);
                saleProductsGrid.appendChild(productElement);
            });
        }

        // Crear elemento de producto
        function createProductElement(product) {
            const productDiv = document.createElement('div');
            productDiv.className = 'product-cell p-6 relative';
            
            let badge = '';
            if (product.onSale) {
                badge = `<div class="sale-badge">SALE</div>`;
            } else if (product.isNew) {
                badge = `<div class="sale-badge" style="background: #00ffff; color: black;">NUEVO</div>`;
            }
            
            productDiv.innerHTML = `
                ${badge}
                <img src="${product.image}" alt="${product.name}" class="product-image">
                <h4 class="text-xl font-bold mb-2">${product.name}</h4>
                <p class="text-gray-400 text-sm mb-4">${product.description}</p>
                <div class="flex justify-between items-center">
                    <div>
                        ${product.onSale 
                            ? `<span class="text-hot-pink font-bold text-xl">$${product.salePrice}</span>
                               <span class="text-gray-500 line-through text-sm ml-2">$${product.price}</span>`
                            : `<span class="text-electric-blue font-bold text-xl">$${product.price}</span>`
                        }
                    </div>
                    <button onclick="addToCart(${product.id})" class="bg-hot-pink text-black px-4 py-2 rounded-full text-sm button-alt">
                        <i class="fas fa-cart-plus mr-1"></i>Añadir
                    </button>
                </div>
            `;
            
            return productDiv;
        }

        // Filtrar productos por categoría
        function filterProducts(category) {
            currentFilter = category;
            displayProducts(products);
        }

        // Buscar productos
        function searchProducts() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const resultsContainer = document.getElementById('searchResults');
            
            if (!searchTerm) {
                resultsContainer.classList.add('hidden');
                return;
            }
            
            const filteredProducts = products.filter(product => 
                product.name.toLowerCase().includes(searchTerm) || 
                product.description.toLowerCase().includes(searchTerm)
            );
            
            if (filteredProducts.length === 0) {
                resultsContainer.innerHTML = '<p class="text-gray-400 text-center p-4">No se encontraron productos.</p>';
            } else {
                resultsContainer.innerHTML = filteredProducts.map(product => `
                    <div class="p-3 border-b border-electric-blue/20 flex items-center gap-3 cursor-pointer hover:bg-electric-blue/10" onclick="addToCart(${product.id}); closeModal('searchModal');">
                        <img src="${product.image}" alt="${product.name}" class="w-12 h-12 object-cover rounded">
                        <div>
                            <p class="font-bold">${product.name}</p>
                            <p class="text-electric-blue">$${product.onSale ? product.salePrice : product.price}</p>
                        </div>
                    </div>
                `).join('');
            }
            
            resultsContainer.classList.remove('hidden');
        }

        // Añadir producto al carrito
        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            if (!product) return;
            
            const existingItem = cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    id: product.id,
                    name: product.name,
                    price: product.onSale ? product.salePrice : product.price,
                    image: product.image,
                    quantity: 1
                });
            }
            
            saveCart();
            updateCartCount();
            showCartNotification();
            
            // Si el modal del carrito está abierto, actualizarlo
            if (document.getElementById('cartModal').style.display === 'block') {
                updateCartModal();
            }
        }

        // Actualizar contador del carrito
        function updateCartCount() {
            const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
            document.getElementById('cartCount').textContent = totalItems;
        }

        // Mostrar notificación de carrito
        function showCartNotification() {
            const notification = document.getElementById('cartNotification');
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        // Actualizar modal del carrito
        function updateCartModal() {
            const cartItems = document.getElementById('cartItems');
            const cartTotal = document.getElementById('cartTotal');
            
            if (cart.length === 0) {
                cartItems.innerHTML = '<p class="text-gray-400 text-center">Tu carrito está vacío</p>';
                cartTotal.textContent = '$0.00';
                return;
            }
            
            let total = 0;
            cartItems.innerHTML = cart.map(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                return `
                    <div class="cart-item">
                        <div class="flex items-center gap-3">
                            <img src="${item.image}" alt="${item.name}">
                            <div>
                                <p class="font-bold">${item.name}</p>
                                <p class="text-electric-blue">$${item.price} x ${item.quantity}</p>
                            </div>
                        </div>
                        <div class="flex items-center">
                            <div class="quantity-control">
                                <button class="quantity-btn" onclick="updateQuantity(${item.id}, ${item.quantity - 1})">-</button>
                                <span>${item.quantity}</span>
                                <button class="quantity-btn" onclick="updateQuantity(${item.id}, ${item.quantity + 1})">+</button>
                            </div>
                            <span class="remove-btn" onclick="removeFromCart(${item.id})">
                                <i class="fas fa-trash"></i>
                            </span>
                        </div>
                    </div>
                `;
            }).join('');
            
            cartTotal.textContent = `$${total.toFixed(2)}`;
        }

        // Actualizar cantidad de producto en el carrito
        function updateQuantity(productId, newQuantity) {
            if (newQuantity < 1) {
                removeFromCart(productId);
                return;
            }
            
            const item = cart.find(item => item.id === productId);
            if (item) {
                item.quantity = newQuantity;
                saveCart();
                updateCartModal();
                updateCartCount();
            }
        }

        // Eliminar producto del carrito
        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            saveCart();
            updateCartModal();
            updateCartCount();
        }

        // Finalizar compra
        function checkout() {
            if (cart.length === 0) {
                alert('Tu carrito está vacío');
                return;
            }
            
            if (!currentUser) {
                closeModal('cartModal');
                openModal('loginModal');
                alert('Por favor inicia sesión para finalizar tu compra');
                return;
            }
            
            alert('¡Compra realizada con éxito! Gracias por tu pedido.');
            cart = [];
            saveCart();
            updateCartModal();
            updateCartCount();
            closeModal('cartModal');
        }

        // Funciones de autenticación
        function switchToRegister() {
            closeModal('loginModal');
            openModal('registerModal');
        }

        function switchToLogin() {
            closeModal('registerModal');
            openModal('loginModal');
        }

        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }

        function registerUser(e) {
            e.preventDefault();
            
            // Resetear mensajes de error
            document.querySelectorAll('.error-message').forEach(el => el.style.display = 'none');
            
            const name = document.getElementById('registerName').value.trim();
            const email = document.getElementById('registerEmail').value.trim();
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('registerConfirmPassword').value;
            
            let isValid = true;
            
            // Validaciones
            if (!name) {
                document.getElementById('registerNameError').style.display = 'block';
                isValid = false;
            }
            
            if (!validateEmail(email)) {
                document.getElementById('registerEmailError').style.display = 'block';
                isValid = false;
            }
            
            if (password.length < 6) {
                document.getElementById('registerPasswordError').style.display = 'block';
                isValid = false;
            }
            
            if (password !== confirmPassword) {
                document.getElementById('registerConfirmPasswordError').style.display = 'block';
                isValid = false;
            }
            
            if (!isValid) return;
            
            // Guardar usuario
            currentUser = {
                name,
                email,
                password // En una aplicación real, esto debería estar encriptado
            };
            
            localStorage.setItem('drillts_user', JSON.stringify(currentUser));
            updateUserSection();
            closeModal('registerModal');
            
            alert('¡Cuenta creada con éxito! Bienvenido/a a DRILLTS.');
        }

        function loginUser(e) {
            e.preventDefault();
            
            // Resetear mensajes de error
            document.querySelectorAll('.error-message').forEach(el => el.style.display = 'none');
            
            const email = document.getElementById('loginEmail').value.trim();
            const password = document.getElementById('loginPassword').value;
            
            let isValid = true;
            
            // Validaciones
            if (!validateEmail(email)) {
                document.getElementById('loginEmailError').style.display = 'block';
                isValid = false;
            }
            
            if (!password) {
                document.getElementById('loginPasswordError').style.display = 'block';
                isValid = false;
            }
            
            if (!isValid) return;
            
            // Comprobar si el usuario existe (simulado)
            const savedUser = localStorage.getItem('drillts_user');
            
            if (savedUser) {
                const user = JSON.parse(savedUser);
                
                if (user.email === email && user.password === password) {
                    currentUser = user;
                    updateUserSection();
                    closeModal('loginModal');
                    return;
                }
            }
            
            alert('Email o contraseña incorrectos');
        }

        function logout() {
            currentUser = null;
            localStorage.removeItem('drillts_user');
            updateUserSection();
        }

        function checkLoggedInUser() {
            if (currentUser) {
                updateUserSection();
            }
        }

        function updateUserSection() {
            const userSection = document.getElementById('userSection');
            
            if (currentUser) {
                const initials = currentUser.name.split(' ').map(n => n[0]).join('').toUpperCase();
                userSection.innerHTML = `
                    <div class="user-info">
                        <div class="user-avatar">${initials}</div>
                        <div class="hidden md:block">
                            <p class="text-sm font-bold">${currentUser.name.split(' ')[0]}</p>
                            <button onclick="logout()" class="text-xs text-electric-blue">Cerrar sesión</button>
                        </div>
                    </div>
                `;
            } else {
                userSection.innerHTML = `
                    <button onclick="openModal('loginModal')" class="bg-gradient-to-r from-[#ff00ff] to-[#00ffff] text-black px-5 py-2 rounded-full font-bold uppercase tracking-widest text-sm button-alt">
                        <i class="fas fa-user mr-2"></i>LOGIN
                    </button>
                `;
            }
        }

        // Funciones para suscripción y contacto
        function subscribeNewsletter(e) {
            e.preventDefault();
            const email = e.target.querySelector('input[type="email"]').value;
            
            if (validateEmail(email)) {
                alert('¡Gracias por suscribirte! Te hemos enviado un código de descuento por email.');
                e.target.reset();
            } else {
                alert('Por favor ingresa un email válido.');
            }
        }

        function submitContactForm(e) {
            e.preventDefault();
            alert('¡Gracias por tu mensaje! Te responderemos en breve.');
            e.target.reset();
        }

        // Funciones auxiliares
        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'block';
            
            if (modalId === 'cartModal') {
                updateCartModal();
            }
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({ behavior: 'smooth' });
        }

        // Cerrar modales al hacer clic fuera de ellos
        window.onclick = function(event) {
            const modals = document.getElementsByClassName('modal');
            for (let i = 0; i < modals.length; i++) {
                if (event.target === modals[i]) {
                    modals[i].style.display = 'none';
                }
            }
        }

        // Inicializar la tienda cuando se cargue la página
        window.onload = initShop;
    </script>
</body>
</html>
